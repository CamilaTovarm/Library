@model IEnumerable<BookHive.Models.EditorialViewModel>

@{
    ViewData["Title"] = "Listado de Editoriales 🏛️";
}

<h1 class="page-title">@ViewData["Title"]</h1>

@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["errorMessage"]</div>
}

@if (!Model.Any())
{
    <p class="no-data">No hay editoriales registradas.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Código Interno Editorial</th>
                <th>Editorial</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var editorial in Model)
            {
                <tr>
                    <td>@editorial.EditorialId</td>
                    <td>@editorial.EditorialName</td>
                </tr>
            }
        </tbody>
    </table>
}

<style>
    .page-title {
        color: #2E5C41; /* Verde bosque oscuro */
        margin-top: 30px;
        margin-bottom: 20px;
        font-weight: 700;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .no-data {
        color: #3C3C3C;
        font-size: 1.1rem;
        margin-top: 20px;
    }

    table.table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #3C3C3C; /* Gris carbón para texto general */
    }

        table.table th, table.table td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
        }

        table.table thead {
            background-color: #D09F3C; /* Amarillo quemado */
            color: white; /* Verde bosque oscuro para el texto */
        }

        table.table tbody tr:hover {
            background-color: #DDF6D2; /* Verde claro al pasar el mouse */
        }

    .alert {
        font-weight: 600;
        margin-bottom: 20px;
    }
</style>
