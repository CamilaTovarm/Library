<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookHive</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookHive.styles.css" asp-append-version="true" />
    <style>
        /* Barra superior */
        .topbar {
            background: #fff;
            padding: 0.5rem 0;
            border-bottom: 1px solid #dcdcdc;
        }

            .topbar .logo {
                height: 60px;
            }

            .topbar .main-menu a {
                color: #222;
                font-weight: 500;
                margin: 0 12px;
                text-decoration: none;
                text-transform: uppercase;
                font-size: 1rem;
            }

                .topbar .main-menu a:hover {
                    color: #3F7D58;
                }

        .search-box input {
            border-radius: 4px;
            border: 1px solid #ccc;
            padding: 4px 10px;
        }
        /* Barra secundaria */
        .secondarybar {
            background: #3F7D58;
            padding: 0.3rem 0;
        }

            .secondarybar .nav-link {
                color: #fff !important;
                font-weight: 500;
                margin-right: 24px;
            }

                .secondarybar .nav-link:hover {
                    color: #b2dfdb !important;
                }
    </style>
</head>
<body>
    <!-- Barra superior -->
    <div class="topbar">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <!-- Logo -->
            <div class="d-flex align-items-center">
                <img src="/src/images/BookHive.jpg" alt="Logo BookHive" class="logo me-3" />
                <span style="font-weight:bold; font-size:1.3rem; color:#222;">BookHive</span>
            </div>
            <!-- Menú principal -->
            <nav class="main-menu d-none d-md-flex">
                <a asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                <a asp-area="" asp-controller="Home" asp-action="MainBi">BIBLIOTECA</a>
                <a asp-area="" asp-controller="Home" asp-action="MainLoans">RESERVAR</a>
                <a asp-area="" asp-controller="Home" asp-action="MainReturns">DEVOLUCIÓN</a>
                <a asp-area="" asp-controller="Home" asp-action="MainUser">USUARIOS</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">ABOUT US</a>
            </nav>
            <!-- Buscador -->
            <form class="search-box d-none d-md-block" role="search">
                <input type="text" placeholder="Buscar en BookHive" aria-label="Buscar" />
            </form>
        </div>
    </div>
    <!-- Barra secundaria -->
    <nav class="secondarybar">
        <div class="container-fluid d-flex align-items-center">
            <a class="nav-link" href="#"></a>
            <a class="nav-link" href="#"></a>
            <a class="nav-link" href="#"></a>
            <a class="nav-link" href="#"></a>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BookHive - <a asp-area="" asp-controller="Home" asp-action="Privacy">About Us</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
