@model IEnumerable<BookHive.Models.LoansViewModel>

@{
    ViewData["Title"] = "Listado de Reservas";
}

<h1 class="page-title">@ViewData["Title"]</h1>

@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["errorMessage"]</div>
}

@if (!Model.Any())
{
    <p>No hay reservas registradas.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-success">
            <tr>
                <th>ID Reserva</th>
                <th>Usuario</th>
                <th>Libro</th>
                <th>Fecha de Reserva</th>
                <th>Estado</th> <!-- Nueva columna -->
            </tr>
        </thead>
        <tbody>
            @foreach (var loan in Model)
            {
                <tr>
                    <td>@loan.LoanId</td>
                    <td>@loan.Name</td>
                    <td>@loan.BookTitle</td>
                    <td>@loan.LoanDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (loan.State)  
                        {
                            <span class="estado-disponible">Devuelto</span>
                        }
                        else  
                        {
                            <span class="estado-reservado">Reservado</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<style>
    .page-title {
        color: #1b5e20;
        margin-top: 30px;
        margin-bottom: 20px;
        font-weight: 700;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    table.table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    table.table th, table.table td {
        padding: 12px 15px;
        border: 1px solid #ddd;
        text-align: left;
    }

    table.table thead {
        background-color: #43a047;
        color: white;
    }

    table.table tbody tr:hover {
        background-color: #f1f8f1;
    }

    .alert {
        font-weight: 600;
        margin-bottom: 20px;
    }

    /* Colores para el estado */
    .estado-reservado {
        color: #d32f2f; /* rojo */
        font-weight: bold;
    }

    .estado-disponible {
        color: #388e3c; /* verde */
        font-weight: bold;
    }
</style>

